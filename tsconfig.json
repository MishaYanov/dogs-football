{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "easy-notify-vanilla": [ "src/index.ts" ]
    },
    "typeRoots": [
      "./dist/index.d.ts",
      "node_modules/@types",
    ]
  },
  "include": ["src"]
}
